<% include ./partials/header %>

  <div class="container text-center">
    <div class="row">
      <div class="col">
        <div class="jumbotron">
          <h1 class="display-4 rs-name">Get <span id="vegan">in</span> touch</h1>
          <p class="lead">with any questions or anything else we can do for you!</p>
          <hr>
          <form class="contact" method="POST" action="/contact">
            <div class="form-group">
              <input class="form-control" type="text" name="name" placeholder="name" required />
            </div>
            <div class="form-group">
              <input class="form-control" type="email" name="email" placeholder="email" required/>
            </div>
            <div class="form-group">
              <textarea class="form-control" name="message" placeholder="What can we do for you?" required></textarea>
            </div>
            <div class="form-group">
              <input type="submit" id="contactbtn" class="btn  btn-lg  btn-block" value="Submit" />
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>

<% include ./partials/footer %>
